<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Edit <%= resource_name.to_s.humanize %></h2>
      </div>

      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal", role: "form" }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-2">
                <p class="help-block">
                  Currently waiting confirmation for: <%= resource.unconfirmed_email %>
                </p>
              </div>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :password, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              <p class="help-block">
                Leave blank if you don't want to change it.
              </p>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :current_password, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
              <p class="help-block">
                We need your current password to confirm your changes.
              </p>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :phone_number, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :phone_number, :class => "form-control", :placeholder => "Enter phone number" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :education_level, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :education_level, :class => "form-control", :placeholder => "Enter education level" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :is_mentor, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.check_box :is_mentor, class: "col-sm-2 control-label" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :name, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, :class => "form-control", :placeholder => "Enter name" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :undergrad_degree, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :undergrad_degree, :class => "form-control", :placeholder => "Enter undergrad degree" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :undergrad_school, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :undergrad_school, :class => "form-control", :placeholder => "Enter undergrad school" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :mba_program, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :mba_program, :class => "form-control", :placeholder => "Enter mba program" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :concentration, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :concentration, :class => "form-control", :placeholder => "Enter concentration" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :full_time_employer, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :full_time_employer, :class => "form-control", :placeholder => "Enter full time employer" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :mentee_capacity, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :mentee_capacity, :class => "form-control", :placeholder => "Enter mentee capacity" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :available_start_date, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :available_start_date, :class => "form-control", :placeholder => "Enter available start date" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <%= f.submit "Update", class: "btn btn-success btn-block" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <%= link_to "Back", :back, class: "btn btn-link btn-block" %>
            </div>
          </div>
        <% end %>

      </div>

      <div class="panel-footer">
        <div class="row">
          <div class="col-sm-2">
            Unhappy?
          </div>

          <div class="col-sm-10">
            <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-block" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
