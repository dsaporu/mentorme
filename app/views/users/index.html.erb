<div class="page-header">
  <h1>
    Users
    <a href="/users/new" class="btn btn-lg btn-success">New User</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Phone number</th>
        <th>Education level</th>
        <th>Is mentor</th>
        <th>Name</th>
        <th>Undergrad degree</th>
        <th>Undergrad school</th>
        <th>Mba program</th>
        <th>Concentration</th>
        <th>Full time employer</th>
        <th>Mentee capacity</th>
        <th>Available start date</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.education_level %></td>
        <td><%= user.is_mentor %></td>
        <td><%= user.name %></td>
        <td><%= user.undergrad_degree %></td>
        <td><%= user.undergrad_school %></td>
        <td><%= user.mba_program %></td>
        <td><%= user.concentration %></td>
        <td><%= user.full_time_employer %></td>
        <td><%= user.mentee_capacity %></td>
        <td><%= user.available_start_date %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
