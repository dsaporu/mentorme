<div class="page-header">
  <h1>
    Mentorship pairings
    <a href="/mentorship_pairings/new" class="btn btn-lg btn-success">New Mentorship pairing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Mentor</th>
        <th>Mentee</th>
        <th>Actions</th>
      </tr>

      <% @mentorship_pairings.each do |mentorship_pairing| %>
      <tr>
        <td><%= mentorship_pairing.mentor.email %></td>
        <td><%= mentorship_pairing.mentee_id %></td>
        <td>
          <a href="/mentorship_pairings/<%= mentorship_pairing.id %>" class="btn btn-primary">Show</a>
          <a href="/mentorship_pairings/<%= mentorship_pairing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_mentorship_pairing/<%= mentorship_pairing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
